<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.SellActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




        <androidx.cardview.widget.CardView
            app:cardElevation="4dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="10dp"

                    android:src="@drawable/baseline_photo_camera_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textAlignment="center"
                    android:text="0/1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

            <TextView

                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="제목"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:hintEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_title"
                    android:hint="제목"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView

                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="거래방식"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.ChipGroup
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                    android:text="판매하기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.chip.Chip
                    android:text="나눔하기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:hintEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_price"
                    android:inputType="number"
                    android:hint="가격을 입력해주세요"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox

                android:layout_marginLeft="10dp"
                app:buttonTint="@color/orange"
                android:text="가격 제안 받기"
                android:id="@+id/jean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="자세한 설명"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_content"
                    android:hint="농성동에 올릴 게시글 내용을 작성해 주세요. (판매금지
물품은 게시가 제한될 수 있어요.) \n \n신뢰할 수 있는 거래를 위해 자세히 적어주세요.\n과학기술정보통신부, 한국 인터넷 진흥원과 함께해요. \n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.chip.Chip
                android:layout_marginLeft="10dp"
                android:text="자주쓰는 문구"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="거래 희망 장소"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout

                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:layout_margin="10dp"
                android:id="@+id/asdfsd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:hintEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">




                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="장소 선택"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />


            </com.google.android.material.textfield.TextInputLayout>







        </LinearLayout>


    </ScrollView>


    <com.google.android.material.chip.Chip
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_weight="1"
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="작성 완료"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:chipBackgroundColor="@color/orange"
        />



</LinearLayout>