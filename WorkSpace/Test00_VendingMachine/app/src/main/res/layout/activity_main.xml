<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">


    <!--자판기 프로그램-->
    <TextView
        android:layout_weight="1"
        android:textSize="30dp"
        android:gravity="center"
        android:text="자판기 프로그램"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <!--음료수 첫번째 줄 -->
    <LinearLayout
        android:layout_weight="3"
        android:background="#123"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <!--1번음료 정보-->
        <LinearLayout
            android:gravity="center"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <!--1번음료 사진-->
            <ImageView
                android:src="@drawable/cola"
                android:layout_width="300dp"
                android:layout_height="150dp"/>
            <!-- 1번음료 이름,가격 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--음료1 이름-->
                <TextView
                    android:id="@+id/cola"
                    android:textColor="#000000"
                    android:text="콜라"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--음료1 가격 -->
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/colaprice"
                    android:text="가격"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <TextView
                android:textColor="#000000"
                android:id="@+id/colacnt"
                android:text="수량"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_cola"
                android:text="주문하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- 2번 음료 정보-->

        <LinearLayout
            android:gravity="center"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <!--2번음료 사진-->
            <ImageView
                android:src="@drawable/cider"
                android:layout_width="300dp"
                android:layout_height="150dp"/>
            <!-- 2번음료 이름,가격 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--음료2 이름-->
                <TextView
                    android:id="@+id/cider"
                    android:textColor="#000000"
                    android:text="사이다"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--음료2 가격 -->
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/ciderprice"
                    android:text="가격"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <TextView
                android:textColor="#000000"
                android:id="@+id/cidercnt"
                android:text="수량"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_cider"
                android:text="주문하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>


    <!-- 음료수 두번째 줄 -->
    <LinearLayout
        android:layout_weight="3"
        android:background="#8BA1B8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <!--3번음료 정보-->
        <LinearLayout
            android:gravity="center"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <!--3번음료 사진-->
            <ImageView
                android:src="@drawable/fanta"
                android:layout_width="300dp"
                android:layout_height="150dp"/>
            <!-- 3번음료 이름,가격 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--음료3 이름-->
                <TextView
                    android:id="@+id/fanta"
                    android:textColor="#000000"
                    android:text="환타"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--음료3 가격 -->
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/fantaprice"
                    android:text="가격"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <TextView
                android:textColor="#000000"
                android:id="@+id/fantacnt"
                android:text="수량"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_fanta"
                android:text="주문하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--4번음료 정보-->
        <LinearLayout
            android:gravity="center"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <!--4번음료 사진-->
            <ImageView
                android:src="@drawable/soda"
                android:layout_width="300dp"
                android:layout_height="150dp"/>
            <!-- 4번음료 이름,가격 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--음료4 이름-->
                <TextView
                    android:id="@+id/soda"
                    android:textColor="#000000"
                    android:text="데미소다"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--음료4 가격 -->
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/sodaprice"
                    android:text="가격"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <TextView
                android:textColor="#000000"
                android:id="@+id/sodacnt"
                android:text="수량"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_soda"
                android:text="주문하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>


    <!--금액입력-->
    <LinearLayout
        android:gravity="center|bottom"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/edt_cash"
            android:hint="금액을 입력하세요"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_cash"
            android:text="금액 입력"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <!--잔액:1000원-->
    <TextView
        android:id="@+id/txt_cash"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="잔액"/>

    <!--잔돈 반환-->
    <Button
        android:id="@+id/btn_change"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.1"
        android:text="잔돈반환"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_call"
            android:background="@drawable/call"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관리자에게 전화하기"/>


    </LinearLayout>


</LinearLayout>